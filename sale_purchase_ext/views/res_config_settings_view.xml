<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="account_vendor_bills" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="penndot_config">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">PennDot Partner</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                        <div class="text-muted">
                            Default vendor will be set to selected below while system is creating an vendor bill for PennDOT
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="penndot_partner_id" class="col-lg-3 o_light_label" string="Vendor"/>
                                <field name="penndot_partner_id" options="{'no_create_edit': True, 'no_open': True}" domain="[('supplier_rank','&gt;', 0)]"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
