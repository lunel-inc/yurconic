<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <group name="accounting" position="after">
                <group string="PennDOT" name="peendot">
                    <group>
                        <field name="is_create_pd_invoice"/>
                        <field name="pd_partner_id" options="{'no_create_edit': True, 'no_open': True}" domain="[('supplier_rank','&gt;', 0)]" attrs="{'invisible': [('is_create_pd_invoice','=',False)], 'required': [('is_create_pd_invoice','=', True)]}" />
                        <field name="pd_cheque_type" attrs="{'invisible': [('is_create_pd_invoice','=',False)], 'required': [('is_create_pd_invoice','=', True)]}"/>
                    </group>
                    <group/>
                </group>
            </group>
        </field>
    </record>
</odoo>
