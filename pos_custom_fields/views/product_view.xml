<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales']" position="after">
                    <page name="Custom Fields" string="Custom Fields" attrs="{'invisible': [('available_in_pos','=',False)]}">
                        <field name="custom_field_ids" nolabel="1" mode="tree,form,kanban" context="{'default_product_id': active_id}">
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="title" />
                                <field name="field_type"/>
                                <field name="is_page" invisible="1"/>
                                <!--                                <field name="questions_selection" invisible="1"/>-->
                                <field name="product_id" invisible="1"/>
                                <!--                                <field name="triggering_question_id" invisible="1"/>-->
                                <control>
                                    <create name="add_section_control" string="Add a section" context="{'default_is_page': True}"/>
                                    <create name="add_question_control" string="Add a question"/>
                                </control>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
